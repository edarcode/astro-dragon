---
import css from "./WhyDragon.module.css";
import { Picture } from "astro:assets";
import constantine from "./constantine.avif";
import { WHY_DRAGON } from "./whyDragon";
import Card from "src/components/cards/Card/Card.astro";
---

<div class={css.why}>
  <h3>¿Por qué <span>Dragon</span>?</h3>

  <section class={css.cards}>
    {WHY_DRAGON.map((item) => <Card content={item.reason} />)}
  </section>

  <Picture
    class={css.bgi}
    src={constantine}
    alt={"blade runner"}
    formats={["avif", "webp"]}
    widths={[768, 1024, constantine.width]}
    sizes={`(max-width: 375px) 768px, (max-width: 768px) 1024px, (max-width: 1024px) ${constantine.width}px`}
  />
</div>
