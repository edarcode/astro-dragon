---
import "../../styles/scales.css";
import "../../styles/colors.css";
import "../../styles/fonts.css";
import "../../styles/reset.css";
import "../../styles/vars.css";
import css from "./Layout.module.css";
import "../../styles/animations.css";
import "../../styles/entry.animations.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../../components/shared/Header/Header.astro";
import Footer from "../../components/shared/Footer/Footer.astro";
import { SEO } from "./seo";

interface Props {
  title: string;
}

const { title = SEO.title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <meta name="description" content={SEO.description} />
    <meta name="author" content={SEO.author} />
    <meta name="language" content="es" />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="Dragon, películas, cine, series, películas online, streaming, estrenos, reseñas de películas, recomendaciones de cine, películas populares, ver películas, entretenimiento"
    />

    <!--OG Metatags -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="video.other" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:description" content={SEO.description} />
    <meta property="og:image" content={SEO.img} />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class={css.body}>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
